showing only items with that category 

  get "/house/:id" do 
      @houseid = params[:id]
      @house = db.exec_params("SELECT * FROM houses WHERE id = #{params["id"].to_i}").first
      @students = db.exec_params("SELECT * FROM students WHERE house_id = #{@houseid}").to_a
      erb :house 
    end

